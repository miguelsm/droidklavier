<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.droidklavier"
    android:versionCode="3"
    android:versionName="0.2 Beta" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" >
    </uses-sdk>

    <application
        android:name="org.droidklavier.Droidklavier"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity android:name="org.droidklavier.activity.Player" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.droidklavier.activity.AlbumList"
            android:launchMode="singleTop" >
        </activity>
        <activity android:name="org.droidklavier.activity.SongList" >
        </activity>
        <activity
            android:name="org.droidklavier.activity.SearchDialog"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="org.droidklavier.activity.BalanceDialog"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="org.droidklavier.activity.MainVolumeDialog"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity android:name="org.droidklavier.activity.SettingsActivity" >
        </activity>
    </application>

</manifest>