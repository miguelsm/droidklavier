<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.droidklavier">

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application android:allowBackup="true"
                 android:name="org.droidklavier.Droidklavier"
                 android:label="@string/app_name"
                 android:icon="@drawable/icon"
                 android:theme="@style/AppTheme">

        <activity android:name="org.droidklavier.activity.Player" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.droidklavier.activity.AlbumList"
            android:launchMode="singleTop" >
        </activity>
        <activity android:name="org.droidklavier.activity.SongList" >
        </activity>
        <activity android:name="org.droidklavier.activity.SettingsActivity" >
        </activity>
    </application>

</manifest>
